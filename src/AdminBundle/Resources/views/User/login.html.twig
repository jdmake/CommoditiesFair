{% extends '@Admin/base.html.twig' %}

{% block title %}
    管理员登录
{% endblock %}

{% block page_body %}
    page-body login-page
{% endblock %}

{% block page_container %}
    <div class="login-container">

        <div class="row">

            <div class="col-sm-6">

                <form method="post" role="form" id="login" class="login-form fade-in-effect in" novalidate="novalidate">

                    <div class="login-header">
                        <h2 >管理员登录</h2>
                        <p>请登录以访问管理区域</p>
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="username"></label>
                        <input type="text" class="form-control input-dark" placeholder="管理员账号" name="form[username]" id="username" autocomplete="off">
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="passwd"></label>
                        <input type="password" class="form-control input-dark" placeholder="管理员密码" name="form[password]" id="passwd" autocomplete="off">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark  btn-block text-left">
                            <i class="fa-lock"></i>
                            立即登录
                        </button>
                    </div>

                    <div class="login-footer">
                    </div>

                </form>

            </div>

        </div>

    </div>
{% endblock %}