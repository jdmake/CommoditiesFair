{% block scripts %}
    <script>
        $(function () {
            $(document).find("a[page]").on('click', function () {
                const href = $(this).attr("href");
                layer.open({
                    type: 2,
                    title: $(this).data("title") || '',
                    shadeClose: true,
                    shade: false,
                    maxmin: true, //开启最大化最小化按钮
                    area: ['80%', '90%'],
                    content: href
