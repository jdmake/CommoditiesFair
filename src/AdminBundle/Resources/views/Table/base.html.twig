{% extends '@Admin/iframe_base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>{{ tableView.pageTitle }}</h3>
        </div>
        <div class="panel-body">
            {{ table(tableView) }}
            <div class="row">
                <div class="col-xs-6">
                    <div class="dataTables_info" id="example-3_info" role="status" aria-live="polite">
                        {% if pagination is not null %}
                        每页显示 {{ knp_pagination_info(pagination) }} 条数据
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="dataTables_paginate paging_simple_numbers" style="text-align: right;">
                        {% if pagination is not null %}
                            {{ knp_pagination_render(pagination) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

